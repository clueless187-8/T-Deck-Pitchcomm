    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/clueless187-8/T-Deck-Pitchcomm",
  "frameworks": ["arduino", "espidf"],
  "platforms": ["espressif32"],
  "dependencies": [
    {
      "name": "TFT_eSPI",
      "version": "^2.5.0"
    },
    {
      "name": "RadioLib",
      "version": "^6.6.0"
    }
  ],
  "examples": [
    "TDeck_Transmitter/src/main.cpp",
    "TWatch_Receiver/src/main.cpp"
